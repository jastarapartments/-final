rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Комнаты: публичное чтение, запись только для админов
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Заявки: публичное создание, чтение/изменение только для админов
    match /applications/{applicationId} {
      allow create: if true;
      allow read, write: if request.auth != null;
    }
    
    // Все остальные коллекции доступны только админам
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}


